{% extends "base.html" %}
{% load i18n %}
{% block content %}
    <div class="container">
        <h4> <b> Список всех групп студентов </b> </h4>
        <div class="row">
            <div class="col-xs-12">
                {% if student_group_list %}
                    <table class="table table-bordered">
                        <tr class="active align-middle">
                            <th width="30%">Название группы</th>
                            <th width="20%">Тип</th>
                            <th width="30%">Курс</th>
                            <th width="15%"></th>
                        </tr>
                        {% for group in student_group_list %}
                            <tr>
                                <td class="align-middle"><a href="/teaching/courses/{{ group.course.id }}/group/{{ group.id }}">{{ group.name }}</a></td>
                                <td class="align-middle">{{ group.type }}</td>
                                <td class="align-middle">{{ group.course }}</td>
                                <td></td>
                            </tr>
                        {% endfor %}
                    </table>
                    <button type="button" class="btn btn-primary" onclick="window.location.href =
                            '/teaching/courses/{{ student_group_list.0.course.id }}/group/create/';">
                            {% trans "Добавить группу" %}</button>
                {% else %}
                    <h4>Список групп пуст... :(</h4>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock content %}
