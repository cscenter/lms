{% extends "base.html" %}
{% load i18n %}
{% block content %}
    <div class="container">
{#    <a href="/teaching/courses/"> < Мои курсы </a><br>#}
{#        <h4> <b> Список групп </b> </h4>#}
        <div class="row">
            <div class="col-xs-12">
                {% if student_group_list %}
                    <table class="table table-bordered">
                        <tr class="active">
                            <th width="30%">Название группы</th>
                            <th width="20%">Тип</th>
                            <th width="30%">Курс</th>
                            <th width="15%"></th>
                        </tr>
                        {% for group in student_group_list %}
                            <tr>
                                <td class="align-middle"><a href="/teaching/courses/{{ group.course.id }}/group/{{ group.id }}">{{ group.name }}</a></td>
                                <td class="align-middle">{{ group.type }}</td>
                                <td class="align-middle">{{ group.course }}</td>
                                <td class="align-middle">
                                    <a href="/teaching/courses/{{ group.course.id }}/group/{{ group.id }}/update/">редактировать</a><br>
                                    <a href="/teaching/courses/{{ group.course.id }}/group/{{ group.id }}/delete/">удалить</a><br>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    <h4>Список групп пуст... :(</h4>
                {% endif %}
            </div>

        </div>
        <button type="button" class="btn btn-primary" onclick="window.location.href =
            './create/';">{% trans "Добавить группу" %}</button>
        <a href="/teaching/courses/group/">Перейти в полный список групп института</a>
    </div>
{% endblock content %}
