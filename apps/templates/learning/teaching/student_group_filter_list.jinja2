{% extends "base.html" %}
{% load i18n %}
{% block content %}
    <div class="container">
        <h4><b>Студенческие группы курса "{{ course.0 }}"</b></h4><br>
        <div class="row">
            <div class="col-xs-12">
                {% if student_group_list %}
                    <table>
                        <tr class="active">
                            <th>Название группы</th>
                        </tr>
                        <tr height="20px"> </tr>
                        {% for group in student_group_list %}
                            <tr>
                                <td class="align-middle"><a href="/teaching/courses/{{ group.course.id }}/group/{{ group.id }}">{{ group.name }}</a></td>
                                <td width="20px"></td>
                                <td class="align-middle">
                                    <button type="button" class="btn btn-primary btn-sm" onclick="window.location.href =
                                        '/teaching/courses/{{ group.course.id }}/group/{{ group.id }}/update/';"><b>{% trans "Редактировать" %}</b></button>
                                </td>
                                <td width="10px"></td>
                                <td>
                                    <button type="button" class="btn btn-sm" onclick="window.location.href =
                                        '/teaching/courses/{{ group.course.id }}/group/{{ group.id }}/delete/';"><b>{% trans "Удалить" %}</b></button>
                                </td>
                            </tr>
                            <tr height="20px"> </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    <h4>Список групп пуст... :(</h4>
                {% endif %}
            </div>
        </div>
        <button type="button" class="btn btn-primary" onclick="window.location.href =
            '../group/create/';">{% trans "Добавить группу" %}</button>
    </div>
{% endblock content %}
