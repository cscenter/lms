{% macro svg_inline(id, modifiers='') -%}
<svg aria-hidden="true" class="sprite-img _{{ id }}{% if modifiers %} {{ modifiers }}{% endif %}" xmlns:xlink="http://www.w3.org/1999/xlink"><use xlink:href="#{{ id }}"></use></svg>
{%- endmacro %}

{% macro testimonial_card(student) -%}
<div class="card mb-2">
    <div class="card__content _middle">
        <div class="author _testimonial">
            {% with im = student.get_thumbnail("150x150", use_stub=False) %}
                {% if im %}
                    <img class="author__img" alt="{{ student.get_full_name() }}" src="{{ im.url }}" />
                {% endif %}
            {% endwith %}
            <div class="author__details">
                <h4>{{ student.get_full_name() }}</h4>
                <span>Выпуск {{ student.graduation_year }}, {{ student.areas_of_study.all()|join(", ") }}</span>
            </div>
            <div class="author__testimonial">
                {{ student.csc_review|markdown("csc_review", 3600, student.pk, student.modified) }}
            </div>
        </div>

    </div>
</div>
{%- endmacro %}
