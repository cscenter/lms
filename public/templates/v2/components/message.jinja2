                </div>
                <section class="page-content">
                <h1>Using</h1>
                    <h2>Пометки в форме</h2>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="card _form">
                                <form action="">
                                    <div class="card__title">
                                        <h2>Вход на сайт</h2>
                                        <div class="mt-1 message _warning">
                                            На заполнение формы у вас есть 5 минут
                                        </div>
                                    </div>
                                    <div class="card__content">
                                        <div class="row">
                                            <div class="field col-12">
                                                <div class="ui input">
                                                    <input type="text" placeholder="Логин">
                                                </div>
                                                <div class="help-text">
                                                    Логин, номер телефона или электронная почта
                                                </div>
                                            </div>
                                            <div class="field col-12">
                                                <div class="ui icon input">
                                                    <input type="password" placeholder="Пароль">
                                                    <i class="_password-hidden icon">{{ macros.svg_inline('password-hidden') }}</i>
                                                </div>
                                            </div>
                                            <div class="field col-lg-auto">
                                                <a href="" class="btn _primary _m-wide">Войти</a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
