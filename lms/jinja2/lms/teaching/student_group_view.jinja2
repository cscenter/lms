{% extends "lms/layouts/v1_base.html" %}
{% block content %}
    <div class="container">
        <div class="row">
        <div class="col-xs-12 h2-and-buttons">
                <h2><a href="{{ url("teaching:student_group_list", course_pk=course_id) }}">
                    <span class="fa fa-angle-left"> </span></a>
                    {{ student_group_detail.name }}
                <br><small>{{ course }}<br></small></h2>
                <div class="btn-toolbar">
                    <a href="{{ url("teaching:student_group_update", course_pk=course_id, pk=group_id) }}"
                       class="btn btn-primary" role="button">Редактировать</a>
                    <a href="{{ url("teaching:student_group_delete", course_pk=course_id, pk=group_id) }}"
                       class="btn btn-danger" role="button">Удалить</a>
                </div>
        <hr>
        </div>
        <div class="col-xs-12">
            <h3>Ответственные</h3>
            {% if assignees %}
                <table>
                    <tr height="10px"> </tr>
                    {% for assignee in assignees %}
                        <tr>
                            <td class="align-middle">
                                {% if assignee.assignee.teacher.first_name == "" and assignee.assignee.teacher.last_name == "" %}
                                    {{ assignee.assignee.teacher.username }}
                                {% else %}
                                    {{ assignee.assignee.teacher.last_name }} {{ assignee.assignee.teacher.first_name }}
                                {% endif %}
                            </td>
                            <td width="20px"></td>
                        </tr>
                        <tr height="10px"> </tr>
                    {% endfor %}
                </table>
            {% else %}
                Список ответственных пуст... :(
            {% endif %}
        <hr>
        </div>
        <div class="col-xs-12">
            <h3>Список студентов группы</h3>
            {% if enrollment %}
                <table class="table table-borderless">
                    <tr height="10px"> </tr>
                    {% for student in enrollment %}
                        <tr>
                            <td width="50%" class="align-middle">
                                    {{ student.student }}
                            </td>
                            <td>
                                <a href="{{ url("teaching:student_group_student_update", course_pk=course_id,
                                    group_pk=group_id, pk=student.student.id) }}">Сменить группу</a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            {% else %}
                Список студентов группы пуст... :(
            {% endif %}
        </div>
    </div>
{% endblock content %}
