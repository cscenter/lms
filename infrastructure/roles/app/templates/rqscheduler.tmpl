#!upstart

description "Run the rqscheduler task for redis which will move scheduled jobs into queues when the time comes"

start on runlevel [2345]
stop on runlevel [016]

setuid {{ cscenter_user }}
setgid {{ cscenter_user }}


exec /home/{{ cscenter_user }}/site/env/bin/python /home/{{ cscenter_user }}/site/repo/cscsite/manage.py rqscheduler --settings=cscenter.settings.production >> /home/{{ cscenter_user }}/site/logs/rqscheduler.log 2>&1

respawn
respawn limit 10 5