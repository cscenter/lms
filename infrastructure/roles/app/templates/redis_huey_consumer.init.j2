setuid {{ cscenter_user }}
setgid {{ cscenter_user }}


exec /home/{{ cscenter_user }}/site/env/bin/python /home/{{ cscenter_user }}/site/repo/cscsite/manage.py blabla >> /var/log/upstart_virtualenv_test/upstart_virtualenv_test.log 2>&1

respawn
respawn limit 10 5